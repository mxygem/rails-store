<h1>New Product</h1>

<%= form_with model: @product do |form| %>
    <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>

    <div>
        <%= form.label :price %>
        <%= form.text_field :price %>
    </div>

    <dev>
        <%= form.submit %>
<% end %>

<%= link_to 'Cancel', products_path %>
